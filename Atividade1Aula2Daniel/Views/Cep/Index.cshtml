

    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <title>Consultar e Cadastrar CEP</title>
    </head>
    <body>

        <div class="container" style="margin-top:30px">

            <h1>Consultar e Cadastrar CEP</h1>
            <form asp-action="CadastrarCEP" asp-controller="Cep">
                <br />
                <input type="submit" value="Consultar e Cadastrar" class="btn btn-outline-secondary" /> <br />
                <label for="txtCep"><b>CEP</b></label><br />
                <input type="text" id="txtCep" class="form-control col-2" placeholder="Informe o CEP" name="txtCep" />
            </form>

        </div>


        <div class="table-responsive">
            <table class="table" style="margin-top:45px">
                <thead>
                    <tr>
                        <th scope="col">Codigo Postal</th>
                        <th scope="col">Logradouro</th>
                        <th scope="col">Complemento</th>
                        <th scope="col">Bairro</th>
                        <th scope="col">Localidade</th>
                        <th scope="col">UF</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Cep in Model)
                    {
                        <tr>
                            <td>@Cep.CEP</td>
                            <td>@Cep.Logradouro</td>
                            <td>@Cep.Complemento</td>
                            <td>@Cep.Bairro</td>
                            <td>@Cep.Localidade</td>
                            <td>@Cep.Uf</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    
    </body>
</html>
